<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="locale">

        <android.support.v7.widget.LinearLayoutCompat
            android:id="@+id/v_toolbar_ll_nav"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start|center_vertical"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:paddingTop="12dp"
            android:paddingEnd="16dp"
            android:paddingBottom="12dp">

            <!--返回按钮图标，默认隐藏-->
            <!--            tools:src="@drawable/ic_nav_back"-->
            <ImageView
                android:id="@+id/v_toolbar_nav_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:visibility="invisible"
                tools:src="@mipmap/icon_return"
                tools:visibility="visible" />

            <!--返回按钮标题，默认隐藏-->
            <TextView
                android:id="@+id/v_toolbar_nav_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_black"
                android:textSize="16sp"
                android:visibility="gone"
                tools:text="返回"
                tools:visibility="visible" />
        </android.support.v7.widget.LinearLayoutCompat>

        <TextView
            android:id="@+id/v_toolbar_menu_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="16dp"
            android:textColor="@color/text_black"
            android:textDirection="locale"
            tools:text="菜单" />

        <ImageView
            android:id="@+id/v_toolbar_menu_img"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="16dp"
            tools:src="@drawable/ic_share" />

        <TextView
            android:id="@+id/v_toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/text_black"
            android:textDirection="locale"
            android:textSize="18sp"
            tools:text="标题" />
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/decor_bg_gray" />
</android.support.v7.widget.LinearLayoutCompat>
